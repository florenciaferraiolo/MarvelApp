<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/marvel</item>
    </style>
    <style name="TextViewLoadingSplashStyleActivitySplash">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_view_size_activity_splash</item>
    </style>
    <style name="ProgressBarLoadingSplashStyleActivitySplash">
        <item name="android:indeterminateTint">@color/red</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:indeterminate">true</item>
    </style>
</resources>
